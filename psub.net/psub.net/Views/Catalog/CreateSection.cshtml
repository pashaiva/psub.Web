@using psub.net.Shared
@model Psub.DataService.HandlerPerQuery.CatalogSectionProcess.Entities.CatalogSectionCreateGetViewModel

@{
    ViewBag.Title = LanguageConstants.CreateSection;
}

<h2>@LanguageConstants.CreateSection</h2>

@using (Html.BeginForm("EditSection", "Catalog", FormMethod.Post))
{
    <div>@Html.ValidationSummary()</div>

    <table class="table table-striped table-bordered table-hover">
        @Html.HiddenFor(m => m.Id)
        <tr>
            <th>
                @Html.LabelFor(model => model.Name)
            </th>
            <td class="table-bordered">
                @Html.EditorFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <th>
                @Html.LabelFor(model => model.MainSectionId)
            </th>
            <td class="table-bordered">
                @Html.DropDownListFor(m => m.MainSectionId, new SelectList(Model.MainSections, "Id", "Name"))
            </td>
        </tr>
    </table>
    <button type="submit" class="btn btn-primary">
        Сохранить
    </button>
}