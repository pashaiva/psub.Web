@model Psub.DataService.DTO.UserDTO
@{
    ViewBag.Title = "EditUserData";
}

<h2>Редактирование профиля</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>UserDTO</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DateRegistration)
        @Html.HiddenFor(model => model.NickName)
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>@Html.LabelFor(model => model.Name)</th>
                <td>@Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>@Html.LabelFor(model => model.NickName)</th>
                <td>@Html.DisplayFor(model => model.NickName)
                    @Html.ValidationMessageFor(model => model.NickName)</td>
            </tr>
            <tr>
                <th>@Html.LabelFor(model => model.Email)</th>
                <td>@Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)</td>
            </tr>
            <tr>
                <th>@Html.LabelFor(model => model.City)</th>
                <td>@Html.EditorFor(model => model.City)
                    @Html.ValidationMessageFor(model => model.City)</td>
            </tr>
            <tr>
                <td style="border:0;"><button id="changePass">изменить пароль</button></td>
            </tr>

            <tr class="hide pass">
                <th>@Html.LabelFor(model => model.Password) новый</th>
                <td>@Html.EditorFor(model => model.Password)</td>
            </tr>
            <tr class="hide pass">
                <th>@Html.LabelFor(model => model.ConfirmPassword) новый еще раз</th>
                <td>@Html.EditorFor(model => model.ConfirmPassword)</td>
            </tr>

        </table>





        @*   <div class="editor-label">
            @Html.LabelFor(model => model.TeamId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeamId)
            @Html.ValidationMessageFor(model => model.TeamId)
        </div>*@

        <p>
            <button type="submit">Сохранить</button>
        </p>
    </fieldset>
}
<script type="text/javascript">
    $(function () {
        $("#changePass").click(function () {
            $(this).hide("slide");
            $(".pass").show("slide");
        });
    });
</script>
